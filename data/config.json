{
  "site": {
    "title": "Paper Tracker",
    "description": "Daily arXiv paper tracking with AI-powered analysis",
    "base_url": "/Paper_Tracking"
  },
  "llm": {
    "provider": "gemini",
    "model": "gemini-2.0-flash",
    "api_key_env": "GOOGLE_API_KEY"
  },
  "domains": [
    {
      "name": "LLM Memory & RAG",
      "categories": ["cs.CL", "cs.AI", "cs.LG"],
      "keywords": ["memory", "long-term memory", "retrieval", "RAG", "retrieval-augmented"],
      "output_category": "memory"
    },
    {
      "name": "AI Agents",
      "categories": ["cs.CL", "cs.AI", "cs.LG"],
      "keywords": ["agent", "autonomous", "tool use", "planning", "multi-agent"],
      "output_category": "agent"
    },
    {
      "name": "LLM Reasoning",
      "categories": ["cs.CL", "cs.AI", "cs.LG"],
      "keywords": ["reasoning", "chain-of-thought", "CoT", "inference", "logical"],
      "output_category": "reasoning"
    },
    {
      "name": "Multimodal Learning",
      "categories": ["cs.CV", "cs.CL", "cs.MM", "cs.AI"],
      "keywords": ["multimodal", "vision-language", "VLM", "MLLM", "image-text", "visual question answering", "VQA"],
      "output_category": "multimodal"
    },
    {
      "name": "Agent Tuning & Optimization",
      "categories": ["cs.AI", "cs.LG", "cs.CL"],
      "keywords": [
        "agent tuning",
        "prompt optimization",
        "automated design",
        "neural architecture search",
        "NAS",
        "self-improving",
        "DSPy",
        "TextGrad",
        "trajectory optimization",
        "instruction tuning",
        "preference optimization",
        "feedback learning"
      ],
      "output_category": "agent_tuning"
    }
  ],
  "fetch": {
    "days_back": 1,
    "max_papers_per_domain": 50,
    "min_relevance_score": 5
  }
}
